<h1 style="text-align:center;">Book a Home</h1>
<h2 style="text-align:center; color:teal;">View all of our wonderful properties!</h2>
 <br>

<div style="text-align:center;">
  <form action='/listings/new'>
    <input type='submit' value='List a property' style="background-color: coral;">
  </form>
</div>

<br>


  <% @listings.each do |listing| %>
    <div class="listing">
      <table class="center" >
        <tr>
          <td><h2 style="color:coralk;"><%= listing.name %></h2><h5 style="color:green;"><%="Your Listing" if @user != nil && listing.host_id == @user.id%></h5></td>
          <td style="text-align: right;"> 
            <form action="/listings/<%= listing.id %>">
              <input type='submit' value='view details' style="background-color:coral;"/>
            </form> 
          </td>
        </tr>
        <tr>
          <td><p><%= listing.description %></p></td>
          <td style="text-align:right;"><h4>Â£<%= (listing.pence_price / 100) %>.00 per night</h4></td>
        </tr>
      </table>
    </div>
  <% end %>
</table>