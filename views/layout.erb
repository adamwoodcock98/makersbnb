<head>
  <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bubbler+One&display=swap" rel="stylesheet">
</head>

<body>
  <ul class='navbar'>
  <div class='left'>
    <ul>
      <a><img src='/scarebnb-logo.svg' alt='Logo Scary House' width='80' height='65'/></a>
      <h2 class='bubble_font'>ScareBnB</h2>
    </ul>
  </div>
    <form action='/listings' method='get'>
      <input class='button' type='submit' value='Listings'>
    </form>
  <% unless current_user.nil? %>
    <form action='/requests' method='get'>
      <input class='button' type='submit' value='Requests'>
    </form>
    <form action='/sessions' method='post'>
      <input id='hidden' type='hidden' name='_method' value='delete'>
      <input class='button' type='submit' value='Sign out'>
    </form>
  <% else %>
    <form action='/users/new' method='GET'>
      <input class='button' type='submit' value='Sign up'>
    </form>
    <form action='/sessions/new' method='GET'>
      <input class='button' type='submit' value='Sign in'>
    </form>
  <% end %>
  </ul>
  
  <% if @flash_message %>
    <p style="position: absolute; bottom: 0; left: 0; width: 100%; text-align: center;"><%= @flash_message %></p>
  <% end %>
</body>

<%= yield %>